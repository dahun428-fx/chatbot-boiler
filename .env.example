# ==============================================
# LLM Chatbot Boilerplate - Environment Variables
# ==============================================
# 이 파일을 복사하여 .env.local 또는 .env.development 를 생성하세요.
# cp .env.example .env.local

# ----------------------------------------------
# 빌드 설정
# ----------------------------------------------
VITE_BASE=/
VITE_ROUTER_BASE=

# ----------------------------------------------
# 🔥 ChatService 설정 (신규)
# ----------------------------------------------
# 서비스 타입: BackendAPI | LLMAPI
VITE_CHAT_SERVICE_TYPE=LLMAPI

# 스트리밍 모드: true (SSE) | false (전체 응답)
VITE_STREAMING_MODE=true

# LocalStorage 저장: true | false
VITE_LOCALSTORAGE_SAVE=false

# 타임아웃 (밀리초)
VITE_API_TIMEOUT_MS=30000

# 시스템 프롬프트
VITE_SYSTEM_PROMPT=You are a helpful assistant.

# ----------------------------------------------
# Backend API 설정 (VITE_CHAT_SERVICE_TYPE=BackendAPI 시)
# ----------------------------------------------
VITE_BACKEND_API_URL=http://localhost:8000/api/chat

# ----------------------------------------------
# LLM 직접 호출 설정 (VITE_CHAT_SERVICE_TYPE=LLMAPI 시)
# ----------------------------------------------
# LLM_PROVIDER: openai | anthropic | gemini
VITE_LLM_PROVIDER=gemini
VITE_LLM_MODEL=gemini-3-flash-preview

# API Key (VITE_ 접두사 없음 = 서버에서만 사용, 브라우저에 노출 안됨)
LLM_API_KEY=

# 프록시 사용 여부 (true면 API Key 숨김)
VITE_LLM_USE_PROXY=true

VITE_LLM_API_BASE_URL=

# ----------------------------------------------
# API 엔드포인트 (레거시)
# ----------------------------------------------
# 기본 API 엔드포인트
VITE_PUBLIC_END_POINT=/api

# 프록시 설정 (개발 환경용)
VITE_PUBLIC_PROXY_END_POINT=https://your-api-server.com
VITE_PUBLIC_PROXY_CHAT_END_POINT=https://your-chat-api-server.com

# ----------------------------------------------
# 스토리지 키
# ----------------------------------------------
VITE_PUBLIC_USER_TOKEN_KEY=userToken
VITE_PUBLIC_CHAT_ROOM_ID=chatRoomId

# ----------------------------------------------
# Analytics (선택)
# ----------------------------------------------
# Google Analytics 4
VITE_GA4_ID=

# PostHog
VITE_PUBLIC_POSTHOG_KEY=
VITE_PUBLIC_POSTHOG_HOST=
VITE_POSTHOG_ENABLED=false
VITE_POSTHOG_SAMPLE_RATE=0

# ----------------------------------------------
# 기타
# ----------------------------------------------
VITE_PUBLIC_AI_MODEL_VERSION=
